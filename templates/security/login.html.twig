{% extends 'base.html.twig' %}

{% block body %}
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form class="login100-form validate-form flex-sb flex-w" action="{{ path('security_login') }}" method="post">
                    <span class="login100-form-title p-b-53">
                        Connexion
                    </span>
                    {% if error %}
                        <div class="w-full text-center alert alert-danger">
                            {{ error.messageKey }}
                        </div>
                    {% endif %}
                    <div class="p-t-31 p-b-9">
                        <label for="inputUsername" class="txt1">Identifiant</label>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate = "Username is required">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="input100" required autofocus>
                        <span class="focus-input100"></span>
                    </div>
                    
                    <div class="p-t-13 p-b-9">
                        <label class="txt1" for="inputPassword">Mot de passe</label>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        <input type="password" name="password" id="inputPassword" class="input100" required>
                        <span class="focus-input100"></span>                  
                    </div>
                    {# TODO : Mettre en place la fonction mot de passe oublié
                        <div class="p-t-13 p-b-9">
                            <a href="#" class="txt2 bo1 m-l-5">
                                Mot de passe oublié ?
                            </a>
                        </div>
                    #}

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="container-login100-form-btn m-t-17">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="login100-form-btn">
                            Se connecter
                        </button>
                    </div>
                    <a href="/reset-password">Mot de passe oublié</a>
                </form>
            </div>
        </div>
    </div>  
{% endblock %}
