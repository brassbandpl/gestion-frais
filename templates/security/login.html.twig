{% extends 'base.html.twig' %}

{% block body %}
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form class="login100-form validate-form flex-sb flex-w" action="{{ path('security_login') }}" method="post">
                    <span class="login100-form-title p-b-53">
                        Connexion
                    </span>
                    {% if error %}
                        <div class="w-full text-center alert alert-danger">
                            {{ error.messageKey }}
                        </div>
                    {% endif %}
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Identifiant
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate = "Username is required">
                        <input class="input100" type="text" name="_username" value="{{ last_username }}" >
                        <span class="focus-input100"></span>
                    </div>
                    
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Mot de passe
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        <input class="input100" type="password" name="_password" >
                        <span class="focus-input100"></span>                        
                    </div>
                    <!-- TODO : Mettre en place la fonction mot de passe oublié
                    <div class="p-t-13 p-b-9">
                        <a href="#" class="txt2 bo1 m-l-5">
                            Mot de passe oublié ?
                        </a>
                    </div>
                    -->
                    <div class="container-login100-form-btn m-t-17">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="login100-form-btn">
                            Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>  
{% endblock %}